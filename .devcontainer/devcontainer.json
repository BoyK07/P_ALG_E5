// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/php
{
	"name": "PHP",

	// Use a pre-built template. See https://containers.dev/templates for a list of available templates.
	// Or use a Dockerfile or Docker Compose file. More info: https://containers.dev/guide/dockerfile
	"image": "mcr.microsoft.com/devcontainers/php:1-8.3-bullseye",

	// Features to add to the dev container. More info: https://containers.dev/features.
	"features": {
		"ghcr.io/devcontainers/features/common-utils:2": {},
		"ghcr.io/devcontainers/features/node:1": {},
		"ghcr.io/devcontainers-extra/features/composer:1": {}
	},

	// Configure tool-specific properties.
	"customizations": {
		"vscode": {
			"extensions": [
				"bmewburn.vscode-intelephense-client",
				"onecentlin.laravel-blade",
				"amiralizadeh9480.laravel-extra-intellisense",
				"xdebug.php-debug",
				"mehedidracula.php-namespace-resolver",
				"mtxr.sqltools",
				"mtxr.sqltools-driver-sqlite",
				"codingyu.laravel-goto-view",
				"naoray.laravel-goto-components",
				"pgl.laravel-jump-controller",
				"ryannaddy.laravel-artisan"
			],
			"settings": {
				"editor.formatOnSave": true,
				"php.validate.enable": true,
				"php.suggest.basic": false,
				"php.debug.mode": "req",
				"php.debug.ideKey": "VSCODE",
				"sqltools.useNodeRuntime": true,
				"sqltools.connections": [
					{
						"previewLimit": 50,
						"driver": "SQLite",
						"name": "Development DB",
						"database": "${workspaceFolder:P_ALG_E5}/MakersMarkt/database/database.sqlite"
					}
				]
			}
		}
	},

	// Use 'forwardPorts' to make a list of ports inside the container available locally.
	"forwardPorts": [
		8000,
		5173,
		9003
	],

	// Use 'portAttributes' to set specific attributes for the forwarded ports.
	"portsAttributes": {
		"8000": {
				"label": "Laravel Server"
		},
		"5173": {
				"label": "Vite Dev Server"
		},
		"9003": {
				"label": "PHP Xdebug"
		}
},

	// Use 'postCreateCommand' to run commands after the container is created.
	"postCreateCommand": "mkdir -p ~/.local/share/vscode-sqltools && cd ~/.local/share/vscode-sqltools && npm install sqlite3 --quiet --no-progress --no-fund > /dev/null 2>&1 && sudo sh -c 'echo \"xdebug.mode=develop,debug\" >> /usr/local/etc/php/conf.d/xdebug.ini && echo \"xdebug.client_host=host.docker.internal\" >> /usr/local/etc/php/conf.d/xdebug.ini && echo \"xdebug.client_port=9003\" >> /usr/local/etc/php/conf.d/xdebug.ini && echo \"xdebug.start_with_request=trigger\" >> /usr/local/etc/php/conf.d/xdebug.ini'",

	// Uncomment to connect as root instead. More info: https://aka.ms/dev-containers-non-root.
	// "remoteUser": "root"

	// Configure the environment inside the container.
	"remoteEnv": {
		"PATH": "${containerEnv:PATH}:./vendor/bin",
		"XDEBUG_CONFIG": "client_host=host.docker.internal client_port=9003 log_level=0 start_with_request=trigger"
	}
}